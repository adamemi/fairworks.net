  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'activerecord-jdbcsqlite3-adapter'
  gem 'bcrypt-ruby' # To use ActiveModel has_secure_password
  gem 'capistrano'
end

gem 'jquery-rails'

