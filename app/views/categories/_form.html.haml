= form_for(@category, :html => { :class => 'form-horizontal' }) do |f|
  
  - if @category.errors.any?
    .alert{ :class => 'alert-danger' }
      %strong
        Could Not Save
      - @category.errors.full_messages.each do |msg|
        = msg

  -# NAME
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'first'

  -# NUMBER
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number

  -# DEPARTMENT
  .control-group
    = f.label :department_id, "Department", :class => 'control-label'
    .controls
      = f.collection_select :department_id, Department.all, :id, :name

  .form-actions
    = f.submit "Save", :class => 'btn btn-primary'
    %button{ :type => 'reset', :class => 'btn'}
      Clear
    = link_to "Cancel", categories_path, :class => 'btn'