= form_for(@prize, :html => { :class => 'form-horizontal' }) do |f|
  
  - if @prize.errors.any?
    .alert{ :class => 'alert-danger' }
      %strong
        Could Not Save
      - @prize.errors.full_messages.each do |msg|
        = msg

  -# NAME
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'first'

  -# AMOUNT
  .control-group
    = f.label :amount, :class => 'control-label'
    .controls
      = f.text_field :amount, :class => 'first'

  .form-actions
    = f.submit "Save", :class => 'btn btn-primary'
    %button{ :type => 'reset', :class => 'btn'}
      Clear
    = link_to "Cancel", prizes_path, :class => 'btn'