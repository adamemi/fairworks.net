<!DOCTYPE html>
<html>
<head>
  <title>Fairworks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if !current_user.nil? %>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to 'Dashboard', root_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">New <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Win...', new_win_path %></li>
                  <li><%= link_to 'Entrant...', new_entrant_path %></li>
                  <li><%= link_to 'Prize...', new_prize_path %></li>
                </ul>
              </li>
              <li><%= link_to "Wins", wins_path %></li>
              <li><%= link_to "Entrants", entrants_path %></li>
              <li><%= link_to "Prizes", prizes_path %></li>
              <li><%= link_to "Reports", reports_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">More <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Categories", categories_path %></li>
                  <li><%= link_to "Departments", departments_path %></li>
                  <li><%= link_to "Divisions", divisions_path %></li>
                </ul>
              </li>
            </ul>
            <ul class="nav pull-right">
              <li class="divider-vertical"></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, <%= current_user.full_name %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "User Admin", users_path %></li>
                  <li><%= link_to "Sign Out", logout_path %></li>
                </ul>
              </li>
            </ul>
          </div><!-- /.nav-collapse -->
        </div>
      </div><!-- /navbar-inner -->
    </div><!-- /navbar -->

  <% end %>

  <div id='site_container' class='container'>
    <%= yield %>
  </div>

</body>
</html>
