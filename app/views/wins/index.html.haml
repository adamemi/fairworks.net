%h2
  Wins

.well{ :class => 'well-small' }
  = link_to "New Win", new_win_path, :class => 'btn btn-primary'

%table{ :class => 'table table-condensed table-striped table-bordered table-clickable' }
  %tr
    %th Entrant
    %th Ticket
    %th Category
    %th Prize

  - @wins.each do |win|
    %tr{ :onclick => "location.href='#{ edit_win_path(win) }'" }
      %td
        = "#{win.entrant.id} - #{win.entrant.full_name}"
      %td
        = win.ticket_number
      %td
        = "#{win.category.number} - #{win.category.name}"
      %td
        = win.prize.name
